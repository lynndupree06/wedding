<p class='visible-xs visible-sm' id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_guest_path(@guest) %> |
<%= link_to 'All Guests', guests_path %>

<h2>
  <%= @guest.first_name %> <%= @guest.last_name %>
  <i class="fa <%= @guest.gender == 'Female' ? 'fa-female' : 'fa-male' %>"></i>
  <i class="fa <%= @guest.child ? 'fa-child' : '' %>"></i>
</h2>

<p>
  <% @guest.group.each do |g| %>
      <span class="badge"><%= link_to "#{g.name}", group_path(g) %></span>
  <% end %>
</p>

<p>
  <strong>Address:</strong><br/>
  <%= @guest.party.address %><br/>
  <%= @guest.party.city %>, <%= @guest.party.state %> <%= @guest.party.postal_code %><br/>
  <%= @guest.party.country %>
</p>

<p>
  <strong>Party:</strong> <%= link_to "#{@guest.party.name}", party_path(@guest.party) %><br>
</p>