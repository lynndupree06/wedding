<% date = '2015-05-01'.to_date %>

<div class="info-box venue">
  <header>The Ceremony</header>

  <% if Date.today >= date || user_signed_in? %>
      <div>
        <%= image_tag 'ceremony_venue.jpg' %>
        <h1>Mt. Zion Baptist Church</h1>

        <h3> 228 Mount Zion Road, Huntsville, AL 35806</h3>
        <section>
          The service will be held at Mount Zion Baptist Church in Huntsville, Alabama at 4 pm on July 25, 2015.
          Please arrive by 3:45 pm.
        </section>

        <div class="link"><a class="view" href="//www.mzbc.net/" target="_blank"></a></div>

        <%= render 'footer' %>
      </div>
  <% else %>
      <%= render 'common/to_be_announced' %>
  <% end %>
</div>
