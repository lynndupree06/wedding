<% flash.each do |name, msg| %>
  <% alert_class = name == 'notice' ? 'alert-success' : 'alert-danger' %>
  <div class="hidden-sm hidden-xs alert <%= alert_class %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
    </button>
    <%= msg %>
  </div>
<% end %>
