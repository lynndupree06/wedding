<!DOCTYPE html>
<html>
<head>
  <title>Kazembe-Brazelton Wedding</title>
  <%= stylesheet_link_tag 'bootstrap-theme.min' %>
  <%= stylesheet_link_tag 'bootstrap.min' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<%= render 'layouts/header' %>

<div class="container admin-container">
  <div>
    <%= link_to 'Send Save the Date Email to A List', save_the_date_a_path, :class => 'btn btn-success save-the-date' %>
    <%= link_to 'Send Save the Date Email to B List', save_the_date_b_path, :class => 'btn btn-info save-the-date' %>
  </div>

  <%= yield %>
</div>

<%= javascript_include_tag 'jquery' %>
<%= javascript_include_tag 'bootstrap.min' %>

<script>
    $(function() {
        $('.save-the-date').click(function() {
            var button = this;
            $(this).html('Sending Email Please Wait...');
            setInterval(function() {
                button.style.color = (button.style.color == 'transparent' ? 'white' : 'transparent');
            }, 500);
        });
    });
</script>

</body>
</html>
