<%= form_for(@party, html: {:class => 'form-horizontal', :id => 'edit-party', :role => 'form'}) do |f| %>
    <% if @party.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@party.errors.count, "error") %> prohibited this party from being saved:</h2>

          <ul>
            <% @party.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label 'A/B List', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= radio_button_tag('party[a_b_list]', 'A', @party.a_b_list == 'A') %>
        <%= label_tag(:a, 'A') %>
        <%= radio_button_tag('party[a_b_list]', 'B', @party.a_b_list == 'B') %>
        <%= label_tag(:b, 'B') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :address, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :city, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :state, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :state, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :postal_code, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :postal_code, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :country, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :country, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :inner_envelop, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :inner_envelop, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :outer_envelop, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :outer_envelop, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= check_box_tag 'party[rsvp]', @party.rsvp, @party.rsvp %>
        <%= label_tag 'party[rsvp]', 'RSVP?' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= check_box_tag 'party[save_the_date_sent]', @party.save_the_date_sent, @party.save_the_date_sent %>
        <%= label_tag 'party[save_the_date_sent]', 'Save the Date Sent?' %>
      </div>
    </div>

    <strong>Guests:</strong>
    <% @party.guests.each do |guest| %>
        <p>
          <%= guest.first_name %> <%= guest.last_name %>
          | <%= link_to 'Remove From Party', guest, method: :delete_from_party, data: {confirm: 'Are you sure?'} %>
        </p>
    <% end %>

    <p>
      <%= link_to 'Add a new Guest', new_guest_path(:party => @party) %>
      | Add an existing Guest
    </p>

    <div class="form-group">
      <%= f.label :notes, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <textarea class="form-control" rows="3"><%= @party.notes %></textarea>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= link_to 'Remove Party', @party, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger' %>
    </div>
<% end %>
