<h1>Listing parties</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Postal Code</th>
      <th>Country</th>
      <th>Email</th>
      <th>Outer envelop</th>
      <th>Inner envelop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <th><%= party.address %></th>
        <th><%= party.city %></th>
        <th><%= party.state %></th>
        <th><%= party.postal_code %></th>
        <th><%= party.postal_code %></th>
        <th><%= party.email %></th>
        <td><%= party.outer_envelop %></td>
        <td><%= party.inner_envelop %></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

