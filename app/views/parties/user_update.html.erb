<div class="info-box rsvp">
  <header>Update Address</header>

  <section>
    Please update your address so that we can send you an invitation.
  </section>

  <%= form_for(@party, html: {:class => 'form-horizontal', :role => 'form'}) do |f| %>
      <% if @party.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@party.errors.count, "error") %> prohibited this party from being saved:</h2>

            <ul>
              <% @party.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :address, :class => 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :address, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :city, :class => 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :city, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :state, :class => 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :state, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :postal_code, :class => 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :postal_code, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :country, :class => 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :country, :class => 'form-control' %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit 'Update', :class => 'btn btn-primary' %>
      </div>
  <% end %>
</div>
