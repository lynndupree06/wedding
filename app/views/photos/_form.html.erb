<%= link_to 'New Photo', new_photo_path %>
<br>

<%= form_for @photo, :url => photos_path, :html => {:multipart => true} do |f| %>
    <% if @photo.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

          <ul>
            <% @photo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label 'Description', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :desc, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= select_tag 'photo[category]', options_for_select(['Engagement Photos', 'Engagement Party']) %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
