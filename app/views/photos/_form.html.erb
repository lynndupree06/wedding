<%= image_tag @photo.avatar.url(:medium) %>
<br><br>

<%= form_for @photo, :html => {:multipart => true, :class => 'form-horizontal', :role => 'form'} do |f| %>
    <% if @photo.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

          <ul>
            <% @photo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label 'Description', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :desc, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= select_tag 'photo[category]', options_for_select(['Engagement Photos', 'Engagement Party', 'Wedding Shower']) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Image', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= link_to 'Remove Photo', @photo, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger' %>
    </div>
<% end %>
