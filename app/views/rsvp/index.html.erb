<h1>Rsvp</h1>

<%= form_tag('rsvp/search', method: 'get', :class => 'form-horizontal', :role => 'form') do %>
    <div class="form-group">
      <%= label_tag :id_code, 'Identification Code', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_field_tag :id_code, '', :class => 'form-control', :placeholder => 'e.g. A4RTC932VB' %>
      </div>
    </div>

    <div class="form-group">
      <label class="radio-inline">
        <input type="radio" name="response" id="yes" value='1'> Yes
      </label>
      <label class="radio-inline">
        <input type="radio" name="response" id="no" value='0'> No
      </label>
    </div>

    <button type="submit" class="btn btn-primary">RSVP</button>
<% end %>
